{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "types": [
      "node"
    ],

    "strict": true,
    "noUnusedLocals": true,

    "sourceMap": true,
    "declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "dist"
  },
  "exclude": [
    "samples",
    "test",
    "node_modules",
    "plugin_packages",
    "**/*.d.ts"
  ]
}
